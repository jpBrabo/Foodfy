{% extends "layout.njk" %}
{% block content %}
    <section class="cards">
        {% for receita in receitas %}
            <div class="card" id="{{receita.id}}">
                <img src="{{receita.image}}" alt="{{receita.title}}">
                <div class="description">
                    <h3 id="{{receita.title}}">{{receita.title}}</h3>
                    <p id="{{receita.author}}">{{receita.author}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
    <script src="/scripts/redirect.js"></script>
{% endblock content %}