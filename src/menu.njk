{% extends "layout.njk" %}

{% block content %}
    <section class="receitas-top">
        <div class="text">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos</br>
            com receitas criadas por profissionais</br>
        do mundo inteiro.</p>
</div>
<img src="/assets/chef.png" alt="">
</section>
<!--Receitas-->
<div class="topic">
<h1>Mais acessadas</h1>
</div>

<section class="cards">
{% for food in foods %}
    
        <div class="card" id="{{food.id}}">
            <img src="/assets/{{food.img}}.png" alt="{{food.title}}">
            <div class="description">
                <h3 id="{{food.title}}">{{food.title}}</h3>
                <p id="{{food.author}}">{{food.author}}</p>
            </div>
        </div>
    
{% endfor %}
</section>
<!--Fim das receitas-->
{% endblock content %}